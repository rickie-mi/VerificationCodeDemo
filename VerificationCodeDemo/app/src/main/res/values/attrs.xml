<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义控件属性名称-->
    <declare-styleable name="myEditTextAttrs">
    <!--输入框的数量-->
        <attr name="etCount" format="integer"/>
        <!--输入框的宽度-->
        <attr name="etWidth" format="dimension|reference"/>
        <!--输入框的高度-->
<!--        <attr name="etHeight" format="dimension|reference"/>-->
        <!--输入框背景色-->
        <attr name="etBgColor" format="color|reference"/>
        <!--输入框间距-->
        <attr name="etDivideSize" format="dimension|reference"/>
        <!--字体颜色-->
        <attr name="textColor" format="color|reference"/>
        <!--字体大小-->
        <attr name="textSize" format="dimension|reference"/>
        <!--光标颜色-->
        <attr name="cursorColor" format="color|reference"/>
    </declare-styleable>
</resources>